<div id="container">
  <h1>IdeaBox</h1>

  <section id="enter_ideas">
    <form action='/' method='POST'>
      <h2>New Ideas</h2>

      <label class="idea_title">
        <span>Idea Title:</span>
        <input id="new_title" type='text' name='idea[title]'/><br/>
      </label>

      <label class="idea_description">
        <span>Idea Description:</span>
        <textarea name='idea[description]'></textarea><br/>
      </label>

      <label>
        <span>Category:</span>
        <select id="drop-menu" name="idea[category]">
          <% categories.each do | category | %>
          <option><%= category %></option>
          <% end %>
        </select>
      </label>

      <label>
        <input class="button" type='submit'/>
      </label>

    </form>
  </section> <!-- end of enter_ideas -->

  <section id="idea_list">
    <h2>Existing Ideas</h2>
    <ul>
      <% ideas.each do |idea| %>
      <li>
        <form action='/<%= idea.id %>/like' method='POST' style="display: inline">
          <input type='submit' value="+"/>
        </form>
        <%= idea.title %><br/>
        <%= idea.description %><br/>
        <%= idea.category %>
        <a href="/<%= idea.id %>/edit">Edit</a>
        <form action='/<%= idea.id %>' method='POST'>
          <input type="hidden" name="_method" value="DELETE">
          <input type='submit' value="delete"/>
        </form>
      </li>
      <% end %>
    </ul>
  </section> <!-- end idea_list-->

  <a href="/statistics">View Statistics</a>
</div> <!-- end container -->
